<h1>Authors</h1>

<% @users.each do |user| %>

    <img src="<%=user.photo %>" alt="profile">
    <h2><%= user.name %></h2>
    <h3>
    <% if user.posts_counter == 1 %>
        <%= user.posts_counter %> post
    </h3>
    <% elsif user.posts_counter == 0 %>
        no posts
    </h3>

    <% else %>
        <%= user.posts_counter %> post  
    </h3>
    <% end %>
    
    <p><%= link_to 'More', user_path(user) %></p>
<% end %>
